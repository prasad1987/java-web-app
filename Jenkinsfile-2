pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t darinpope/java-web-app:latest .'
      }
    }
    stage('Scan') {
      steps {
        sh 'trivy image  --format template --template /report/html.tpl  --output scan.html --severity HIGH,CRITICAL darinpope/java-web-app:latest'
      }
    }
  }
}
