pipeline {
  agent any
  options {
    buildDiscarder(logRotator(numToKeepStr: '5'))
  }
  stages {
    stage('Build') {
      steps {
        sh 'docker build -t darinpope/java-web-app:latest .'
      }
    }
    stage('Scan') {
      steps {
        sh 'trivy image  --format template --template /report/html.tpl  --output cve_report.html --severity HIGH,CRITICAL darinpope/java-web-app:latest'
      }
    }
  }
  post {
        always {  
                archiveArtifacts artifacts: 'cve_report.html', fingerprint: true
                
                publishHTML (target: [
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true, 
                    reportDir: '.',
                    reportName: 'CVE-REPORT',
                    reportFiles: 'cve_report.html',
                 ]) 
        }
    }
}
